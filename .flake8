[flake8]
max-line-length = 160
disable-noqa = False
doctests = False
include-in-doctest =
    genespeak/core.py
exclude =
    # Exclude tests folder for now, until tests are written properly.
    tests,
    # Exclude housekeeper folder altogether
    housekeeper
ignore =
    E203,
    # E266 too many leading '#' for block comment
    E266,
    # E251 unexpected spaces around keyword / parameter equals
    E251,
    # E123 closing bracket does not match indentation of opening bracket's line
    E123
